[Unit]
Description=ZooKeeper Service
Documentation=http://zookeeper.apache.org
Requires=network.target
After=network.target

[Service]
Type=forking
User=zookeeper
Group=zookeeper
Environment="JAVA_HOME=/usr/java/jdk{{ version['jdk'] }}-amd64"
ExecStart="/home/zookeeper/_package/bin/zkServer.sh start /home/zookeeper/_package/conf/zoo.cfg"
ExecStop="/home/zookeeper/_package/bin/zkServer.sh stop /home/zookeeper/_package/conf/zoo.cfg"
ExecReload="/home/zookeeper/_package/bin/zkServer.sh restart /home/zookeeper/_package/conf/zoo.cfg"
WorkingDirectory=/home/zookeeper/dataDir

[Install]
WantedBy=default.target

